<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'BAREBONE RESULTS'})">Resultados</a></li>
			<li class="tab"><a href="#" class="active">Noticias</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'BAREBONE TAGS'})">Tags</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<% items.forEach(function(item) { %>
		<div class="col s12">
			<div class="card" onclick="apretaste.send({command:'BAREBONE ARTICLE'})">
				<div class="card-image waves-effect waves-block waves-light">
					<img src="{{APP_IMAGE_PATH}}<%= item.image %>">
				</div>
				<div class="card-content">
					<span class="card-title grey-text text-darken-4"><%= item.title %></span>

					<span class="chip tiny grey lighten-1"><i class="far fa-user"></i> Salvi Pascual</span>
					<span class="chip tiny grey lighten-1"><i class="far fa-newspaper"></i> Diario de Cuba</span>
					<span class="chip tiny grey lighten-1"><i class="far fa-comments"></i> 23</span>
					<span class="chip tiny grey lighten-1"><i class="far fa-calendar"></i> Ene 1, 2020 4:20 PM</span>

					<span class="chip tiny">Cuba</span>
					<span class="chip tiny">Emigración</span>
					<span class="chip tiny">Aeronáutica</span>
					<span class="chip tiny clear"><i class="material-icons icon">check</i> Limpia</span>
				</div>
			</div>
		</div>
	<% }) %>
</div>

<!-- BUTTONS -->

<div class="bottom-space"></div>

<div class="fixed-action-btn">
	<a class="btn-floating btn-large green modal-trigger" href="#searchModal">
		<i class="large material-icons">search</i>
	</a>
</div>

<!-- SEARCH MODAL -->

<div id="searchModal" class="modal bottom-sheet fullscreen">
	<div class="modal-content">
		<div class="input-field">
			<input id="title" type="text">
			<label for="title">Titular</label>
		</div>

		<div class="input-field">
			<select id="media">
				<option value="" selected>Todos</option>
				<option value="">Diario de Cuba</option>
				<option value="">CubaNet</option>
				<option value="">14yMedio</option>
			</select>
			<label for="media">Medio de Prensa</label>
		</div>

		<div class="input-field">
			<input id="minComments" type="number">
			<label for="minComments">Número de comentarios</label>
		</div>

		<div class="input-field">
			<input id="minDate" type="date">
			<label for="minDate">Publicado el</label>
		</div>
	</div>

	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect btn-flat">Cerrar</a>
		<a href="#!" class="waves-effect green-text btn-flat" onclick="apretaste.send({'command':'BAREBONE USERS'})">Buscar</a>
	</div>
</div>
