<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'BAREBONE RESULTS'})">Resultados</a></li>
			<li class="tab"><a href="#" class="active">Noticias</a></li>
		</ul>
	</div>
</div>


<div class="row">
	<% items.forEach(function(item) { %>
		<div class="col s12">
			<div class="card">
				<div class="card-image waves-effect waves-block waves-light">
					<img src="{{APP_IMAGE_PATH}}<%= item.image %>">
				</div>
				<div class="card-content">
					<span class="card-title grey-text text-darken-4"><%= item.title %></span>
					<p class="blue-grey-text">
						<%= item.author %>
						&middot; 
						<%= moment(item.date).format('DD/MM/YYYY h:mm:ss a') %></span>
					</p>
				</div>
				<div class="card-action grey lighten-4">
					<a class="green-text" href="#!" onclick="apretaste.send({command:'BAREBONE ARTICLE'})">Ver mas</a>
				</div>
			</div>
		</div>
	<% }) %>
</div>

<div class="bottom-space"></div>

<!-- SUBMIT -->
<div class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send({'command':'BAREBONE FORM'})">
		<i class="material-icons">search</i>
	</a>
</div>
