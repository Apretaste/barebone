<div class="row">
	<div class="col s12" id="article">
		<h1><%= title %></h1>

		<div class="center-align">	
			<img class="responsive-img" src="{{APP_IMAGE_PATH}}<%= image %>" alt="">
		</div>

		<blockquote>
			<%= summary %>
		</blockquote>

		<p><%= body %></p>

		<ul class="collection one-line">
			<li class="collection-item avatar">
				<i class="tiny material-icons circle">local_phone</i>
				<span class="title">+1 305 587 1154</span>
				<p class="blue-grey-text">Llámame por teléfono</p>
				<a href="#!" class="secondary-content"><i class="material-icons">arrow_forward</i></a>
			</li>
			<li class="collection-item avatar">
				<i class="tiny material-icons circle">email</i>
				<span class="title">salvi@apretaste.org</span>
				<p class="blue-grey-text">Escríbeme por correo</p>
				<a href="#!" class="secondary-content"><i class="material-icons">arrow_forward</i></a>
			</li>
		</ul>
	</div>
</div>

<div class="bottom-space"></div>

<!-- BUTTON -->
<div id="btn" class="fixed-action-btn">
	<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.back()">
		<i class="material-icons">arrow_back</i>
	</a>
</div>
